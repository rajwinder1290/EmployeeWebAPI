@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 font-weight-bolder">All Employee Details</h1>
    <button class="btn btn-primary" data-toggle="modal" data-target="#add_edit_dialog">New Employee</button>
</div>
<hr />
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th colspan="2" align="center">Actions</th>
            </tr>
        </thead>
        <tbody id="table_employee">
            <tr>
                <td colspan="5" align="center">No Employee information</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Add/Edit Employee Modal Dialog Box -->
<div class="modal" tabindex="-1" role="dialog" id="add_edit_dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="model_title">Add Employee Details</h5>
                <button type="button" onclick="resetForm()" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="firstname">Enter First Name: </label>
                        <input type="text" class="form-control" id="firstname">
                        <input type="hidden" id="emp_id">
                    </div>
                    <div class="form-group">
                        <label for="lastname">Enter Last Name: </label>
                        <input type="text" class="form-control" id="lastname">
                    </div>
                    <div class="form-group">
                        <label for="designation">Enter Designation: </label>
                        <input type="text" class="form-control" id="designation">
                    </div>
                    <div class="form-group">
                        <label for="salary">Enter Salary: </label>
                        <input type="number" class="form-control" id="salary">
                    </div>
                    <div class="form-group" id="output">

                    </div>
                    <button type="button" onclick="saveEmployee()" class="btn btn-primary">Save Details</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button"  onclick="resetForm()" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/site.js"></script>

    <script>
        $(document).ready(function () {
            displayAllEmployees(true);
        });
    </script>
}